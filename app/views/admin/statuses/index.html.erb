<p id="notice"><%= notice %></p>

<h2>Status</h2>

<table id="statuses" class="table">
  <thead>
    <tr>
      <th><%= link_to 'Label', '#' %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @statuses.each do |status| %>
      <tr id="<%= dom_id status %>">
        <td><%= status.label %></td>
        <td class="has-text-centered"><%= link_to 'Show', [:admin, status] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New status', new_admin_status_path %>
